{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,        
    "allowSyntheticDefaultImports": true,  
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "files": ["./bft_recovery_integration.ts"]
}

